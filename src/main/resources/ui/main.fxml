<?xml version="1.0" encoding="UTF-8"?>
<?language javascript?>
<?import com.sergeybochkov.transmissionremote.*?>
<?import com.sergeybochkov.transmissionremote.ui.TorrentCell?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import java.net.URL?>
<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.sergeybochkov.transmissionremote.Main">
    <MenuBar useSystemMenuBar="true">
        <Menu text="File">
            <MenuItem text="Change session" onAction="#session">
                <graphic>
                    <Label styleClass="icons">
                        <TransmissionRemote fx:constant="ICON_GLOBE"/>
                    </Label>
                </graphic>
            </MenuItem>
            <MenuItem text="Add torrent" fx:id="addItem" onAction="#add" accelerator="meta+D">
                <graphic>
                    <Label styleClass="icons">
                        <TransmissionRemote fx:constant="ICON_FOLDER_OPEN_O"/>
                    </Label>
                </graphic>
            </MenuItem>
            <SeparatorMenuItem/>
            <MenuItem text="Exit" fx:id="exitItem" onAction="#close">
                <graphic>
                    <Label styleClass="icons">
                        <TransmissionRemote fx:constant="ICON_SIGN_OUT"/>
                    </Label>
                </graphic>
            </MenuItem>
        </Menu>

        <Menu text="Edit">
            <MenuItem text="Start all torrents" fx:id="startAllItem" onAction="#startAll">
                <graphic>
                    <Label styleClass="icons, reflect">
                        <TransmissionRemote fx:constant="ICON_REPLY_ALL"/>
                    </Label>
                </graphic>
            </MenuItem>
            <MenuItem text="Stop all torrents" fx:id="stopAllItem" onAction="#stopAll">
                <graphic>
                    <Label styleClass="icons">
                        <TransmissionRemote fx:constant="ICON_SQUARE"/>
                    </Label>
                </graphic>
            </MenuItem>
            <SeparatorMenuItem/>
            <MenuItem text="Start torrent" fx:id="startItem" onAction="#startTorrent">
                <graphic>
                    <Label styleClass="icons, reflect">
                        <TransmissionRemote fx:constant="ICON_REPLY"/>
                    </Label>
                </graphic>
            </MenuItem>
            <MenuItem text="Stop torrent" fx:id="stopItem" onAction="#stopTorrent">
                <graphic>
                    <Label styleClass="icons">
                        <TransmissionRemote fx:constant="ICON_SQUARE_O"/>
                    </Label>
                </graphic>
            </MenuItem>
            <SeparatorMenuItem/>
            <MenuItem text="Info" fx:id="infoItem" onAction="#info">
                <graphic>
                    <Label styleClass="icons">
                        <TransmissionRemote fx:constant="ICON_INFO_CIRCLE"/>
                    </Label>
                </graphic>
            </MenuItem>
            <MenuItem text="Reannounce all torrents" fx:id="reannounceItem" onAction="#reannounceTorrent">
                <graphic>
                    <Label styleClass="icons">
                        <TransmissionRemote fx:constant="ICON_REFRESH"/>
                    </Label>
                </graphic>
            </MenuItem>
            <SeparatorMenuItem/>
            <MenuItem text="Delete torrent" fx:id="trashItem" onAction="#trashTorrent">
                <graphic>
                    <Label styleClass="icons">
                        <TransmissionRemote fx:constant="ICON_TRASH"/>
                    </Label>
                </graphic>
            </MenuItem>
            <MenuItem text="Delete torrent with files" fx:id="deleteItem" onAction="#deleteTorrent">
                <graphic>
                    <Label styleClass="icons">
                        <TransmissionRemote fx:constant="ICON_BAN"/>
                    </Label>
                </graphic>
            </MenuItem>
        </Menu>

        <Menu text="Help">
            <MenuItem text="About" onAction="#about">
                <graphic>
                    <Label styleClass="icons">
                        <TransmissionRemote fx:constant="ICON_FLASK"/>
                    </Label>
                </graphic>
            </MenuItem>
        </Menu>
    </MenuBar>

    <HBox alignment="center" spacing="10">
        <padding>
            <Insets top="10" bottom="10" left="10" right="10"/>
        </padding>
        <Button text="Start all" fx:id="startAllButton" onAction="#startAll">
            <tooltip>
                <Tooltip text="Start all torrents"/>
            </tooltip>
            <graphic>
                <Label styleClass="icons, reflect">
                    <TransmissionRemote fx:constant="ICON_REPLY_ALL"/>
                </Label>
            </graphic>
        </Button>
        <Button text="Stop all" fx:id="stopAllButton" onAction="#stopAll">
            <tooltip>
                <Tooltip text="Stop all torrents"/>
            </tooltip>
            <graphic>
                <Label styleClass="icons">
                    <TransmissionRemote fx:constant="ICON_SQUARE"/>
                </Label>
            </graphic>
        </Button>
        <ToggleButton fx:id="speedLimitButton" text="Speed limit" onAction="#turtle">
            <tooltip>
                <Tooltip text="Now speed limit is OFF"/>
            </tooltip>
            <graphic>
                <Label styleClass="icons">
                    <TransmissionRemote fx:constant="ICON_ROCKET"/>
                </Label>
            </graphic>
        </ToggleButton>
        <Button text="Delete" fx:id="trashButton" onAction="#trashTorrent">
            <tooltip>
                <Tooltip text="Remove selected torrents"/>
            </tooltip>
            <graphic>
                <Label styleClass="icons">
                    <TransmissionRemote fx:constant="ICON_TRASH"/>
                </Label>
            </graphic>
        </Button>
        <Button text="Info" fx:id="infoButton" onAction="#info">
            <tooltip>
                <Tooltip text="Show info about selected torrent"/>
            </tooltip>
            <graphic>
                <Label styleClass="icons">
                    <TransmissionRemote fx:constant="ICON_INFO_CIRCLE"/>
                </Label>
            </graphic>
        </Button>
    </HBox>

    <ListView VBox.vgrow="ALWAYS" fx:id="torrents">
        <cellFactory>
            <TorrentCell />
        </cellFactory>
        <contextMenu>
            <ContextMenu>
                <items>
                    <MenuItem mnemonicParsing="false" text="Start" fx:id="startContextItem" onAction="#startTorrent">
                        <graphic>
                            <Label styleClass="icons, reflect">
                                <TransmissionRemote fx:constant="ICON_REPLY"/>
                            </Label>
                        </graphic>
                    </MenuItem>
                    <MenuItem mnemonicParsing="false" text="Stop" fx:id="stopContextItem" onAction="#stopTorrent">
                        <graphic>
                            <Label styleClass="icons, reflect">
                                <TransmissionRemote fx:constant="ICON_SQUARE_O"/>
                            </Label>
                        </graphic>
                    </MenuItem>
                    <SeparatorMenuItem/>
                    <MenuItem text="Reannounce" fx:id="reannounceContextItem" onAction="#reannounceTorrent">
                        <graphic>
                            <Label styleClass="icons, reflect">
                                <TransmissionRemote fx:constant="ICON_REFRESH"/>
                            </Label>
                        </graphic>
                    </MenuItem>
                    <MenuItem mnemonicParsing="false" text="Info" fx:id="infoContextItem" onAction="#info">
                        <graphic>
                            <Label styleClass="icons, reflect">
                                <TransmissionRemote fx:constant="ICON_INFO_CIRCLE"/>
                            </Label>
                        </graphic>
                    </MenuItem>
                    <SeparatorMenuItem mnemonicParsing="false"/>
                    <MenuItem mnemonicParsing="false" text="Delete" fx:id="trashContextItem" onAction="#trashTorrent">
                        <graphic>
                            <Label styleClass="icons, reflect">
                                <TransmissionRemote fx:constant="ICON_TRASH"/>
                            </Label>
                        </graphic>
                    </MenuItem>
                    <MenuItem mnemonicParsing="false" text="Delete torrent and files" fx:id="deleteContextItem" onAction="#deleteTorrent">
                        <graphic>
                            <Label styleClass="icons, reflect">
                                <TransmissionRemote fx:constant="ICON_BAN"/>
                            </Label>
                        </graphic>
                    </MenuItem>
                </items>
            </ContextMenu>
        </contextMenu>
    </ListView>

    <HBox alignment="center" spacing="15">
        <padding>
            <Insets top="10" bottom="10" left="10" right="10"/>
        </padding>
        <Label fx:id="freeSpace">
            <tooltip>
                <Tooltip text="Free space left"/>
            </tooltip>
            <graphic>
                <Label styleClass="icons">
                    <TransmissionRemote fx:constant="ICON_HDD"/>
                </Label>
            </graphic>
        </Label>
        <Label fx:id="downSpeed">
            <tooltip>
                <Tooltip text="Download speed"/>
            </tooltip>
            <graphic>
                <Label styleClass="icons">
                    <TransmissionRemote fx:constant="ICON_ARROW_DOWN"/>
                </Label>
            </graphic>
        </Label>
        <Label fx:id="upSpeed">
            <tooltip>
                <Tooltip text="Upload speed"/>
            </tooltip>
            <graphic>
                <Label styleClass="icons">
                    <TransmissionRemote fx:constant="ICON_ARROW_UP"/>
                </Label>
            </graphic>
        </Label>
        <Label fx:id="rating">
            <tooltip>
                <Tooltip text="All-time rating"/>
            </tooltip>
            <graphic>
                <Label styleClass="icons">
                    <TransmissionRemote fx:constant="ICON_SIGNAL"/>
                </Label>
            </graphic>
        </Label>

    </HBox>
    <stylesheets>
        <URL value="@/style/style.css"/>
    </stylesheets>
</VBox>